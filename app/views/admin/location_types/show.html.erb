<%= provide :title, @location_type.name %>

<%= render "admin/location_types/modal" %>
<div class="row">
  <div class="col-12 card">
    <div class="card-body">
      <address>
        <p class="font-weight-bold"><%= @location_type.name %>
        <p><%= t ".created_at" %>: <%= l @location_type.created_at, format: :full %></p>
        <p><%= t ".updated_at" %>: <%= l @location_type.updated_at, format: :full %></p>
      </address>
      <%= button_tag t(".del_but"), class: "btn btn-danger btn-sm float-right ml-1", data: {toggle: "modal", target: "#deleteModal"} %>
      <%= link_to t(".edit_but"), edit_admin_location_type_path(@location_type), class: "btn btn-primary btn-sm float-right" %>
    </div>
  </div>
</div>
