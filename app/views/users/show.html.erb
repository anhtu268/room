<h4><%= t ".reviews" %></h4><br>
  <% @locations.each do |location| %>
    <% if !location.reviews.blank? %>
      <% location.reviews.each do |review| %>
        <div class="row">
          <div class="col-md-2 text-center">
            <%= review.user.name %>
          </div>
          <div class="col-md-10">
            <%= link_to location.name, location %><br>
            <%= review.comment %><br>
            <%= l review.created_at, format: :full %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
